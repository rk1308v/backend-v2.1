<table bgcolor="#0dc6e2" class="head" style="background: #0dc6e2;" cellpadding="0" cellspacing="0" border="0" border-collapse="collapse" width="100%">
    <tbody>
        <tr>
            <th scope="col" colspan='2' style="text-align: center">
                SMX Transaction Receipt
            </th>
        </tr>
        <tr>
            <th scope="row">Recipient:</th>
            <td><%= @transaction.summary(@user)[:recipient_name]%></td>
        </tr>
        <tr>
            <th scope="row">Recipient Phone:</th>
            <td><%= @transaction.summary(@user)[:recipient_telephone]%></td>
        </tr>
        <tr>
            <th scope="row">Recipient Country:</th>
            <td><%= @transaction.summary(@user)[:recipient_country]%></td>
        </tr>
        <tr>
            <th scope="row">Amount:</th>
            <td><%= @transaction.summary(@user)[:amount]%></td>
        </tr>
        <tr>
            <th scope="row">Sent Amount:</th>
            <td><%= @transaction.summary(@user)[:amount]%></td>
        </tr>
        <tr>
            <th scope="row">Status:</th>
            <td><%= @transaction.summary(@user)[:transaction_status]%></td>
        </tr>
        <tr>
            <th scope="row">From:</th>
            <td><%= @transaction.summary(@user)[:payout_service]%></td>
        </tr>
        <tr>
            <th scope="col" colspan='2' style="text-align: left">
                <br>
                Sincerely, <br /><strong style="color: #371989">The SMX Team</strong>
            </th>
        </tr>
        <tr class="adr footnote">
            <th scope="col" colspan='2' style="text-align: center">
                <br>
                <span class="db">&#169; 2017 SMX MM</span> <span class="hide">&nbsp;&bull;&nbsp;</span> New York, NY
            </th>
        </tr>
        <tr class="adr footnote">
            <th scope="col" colspan='2' style="text-align: center">
                <span class="db">
                <h6 style="display: inline">
                    <a href="https://www.facebook.com/smxmoney" style="outline: none;color: #00adf0;text-decoration: none;font: 12px/16px Helvetica, Arial, sans-serif">Facebook</a>
                </h6>&nbsp;&bull;&nbsp;
                <h6 style="display: inline">
                    <a href="https://twitter.com/smxmoney" style="outline: none;color: #00adf0;text-decoration: none;font: 12px/16px Helvetica, Arial, sans-serif">Twitter</a>
                </h6>
            </th>
        </tr>
    </tbody>
</table>